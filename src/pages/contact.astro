---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<!DOCTYPE html>
<html lang="en-us">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
			}
			ul li time {
				flex: 0 0 130px;
				font-style: italic;
				color: #888;
			}
			ul li a:visited {
				color: #8e32dc;
			}
		</style>
	</head>
	<body class="terminal">
		<Header title="Contact me" />
		<div class="container">
			<h1>Contact Me</h1>
			<form action="#">
                <fieldset>
                    <legend>Contact me</legend>
                    <div class="form-group">
                        <label for="text">Name</label>
                        <input id="text" type="text" minlength="5" placeholder="your name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" type="email" minlength="5" placeholder="your email">
                    </div>
                    <div class="form-group">
                        <label for="tarea">Message</label>
                        <textarea id="tarea" cols="30" rows="5" minlength="5" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-default" type="submit" role="button" name="submit" id="submit">Submit</button>                    </div>
                </fieldset>
            </form>
		</div>
		<Footer />
	</body> 
</html>
